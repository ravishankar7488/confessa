<% layout("../layouts/boilerplate") %>

<div class="container my-5">
  <h2 class="text-center mb-4 fw-bold">ğŸ“ Pending Confessions</h2>
  <% if (Posts.length === 0) { %>
  <div
    class="d-flex flex-column align-items-center justify-content-center text-center"
    style="height: 50vh"
  >
    <img
      src="../images/empty.png"
      alt="Empty Bucket"
      class="img-fluid rounded mb-4 shadow-sm"
      style="max-width: 300px"
    />

    <!-- Message -->
    <h3 class="fw-bold text-muted">No Pending Confessions</h3>
    <p class="text-secondary">Looks like everything has been reviewed!</p>
  </div>
  <% } %>

  <div class="row g-4">
    <% Posts.forEach((post) => { %>
    <div class="col-md-6 col-lg-4">
      <div
        class="card h-100 border border-2 shadow-sm"
        style="border-color: #ddd"
      >
        <!-- Top Date Bar -->
        <div class="bg-danger text-white text-center py-1 fw-semibold">
          <% const time = post.createdAt.toLocaleTimeString('en-IN', { timeZone:
          'Asia/Kolkata', hour: '2-digit', minute: '2-digit', hour12: true });
          const date = post.createdAt.toLocaleDateString('en-IN', { timeZone:
          'Asia/Kolkata', day: '2-digit', month: 'short', year: 'numeric' }); %>
          <%= time %>, <%= date %>
        </div>

        <!-- Confession Box -->
        <div
          class="card-body d-flex align-items-center justify-content-center text-center"
          style="height: 350px; background-color: skyblue"
        >
          <p class="card-text fs-5 mb-0"><b><%= post.text %></b></p>
        </div>

        <!-- Actions -->
        <div class="card-footer bg-transparent d-flex justify-content-around">
          <form
            method="POST"
            action="/admin/pass/<%= post._id %>?_method=PATCH"
            class="m-0"
          >
            <button type="submit" class="btn btn-success btn-sm">
              âœ… Pass
            </button>
          </form>

          <form
            method="POST"
            action="/admin/reject/<%= post._id %>?_method=DELETE"
            class="m-0"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              ğŸ—‘ Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
