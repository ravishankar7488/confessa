<% layout("../layouts/boilerplate") %>

<div class="container my-5">
  <% if(query!="notavailable"){ %>
  <h2 class="text-center mb-4 fw-bold">Search result for "<%=query%>"</h2>
  <% } %> <% if(query=="notavailable") { %>
  <h2 class="text-center mb-4 fw-bold">Confessions Board</h2>
  <% } %> <% if (Posts.length === 0) { %>
  <div
    class="d-flex flex-column align-items-center justify-content-center text-center"
    style="height: 40vh"
  >
    <img
      src="../images/empty.png"
      alt="Empty Bucket"
      class="img-fluid rounded mb-4 shadow-sm"
      style="max-width: 300px"
    />

    <!-- Message -->
    <h3 class="fw-bold text-muted">No Confessions</h3>
  </div>
  <% } %>
  <div class="row g-4">
    <% Posts.forEach((post) => { %> <% if (post.isPassed) { %>
    <div class="col-md-6 col-lg-4">
      <div
        class="card h-100 border border-2 shadow-sm"
        style="border-color: #ddd"
      >
        <!-- Top Date Bar -->
        <div class="bg-danger text-white text-center py-1 fw-semibold">
          <%= post.createdAt.toLocaleString() %>
        </div>

        <!-- Confession Content Box -->
        <div
          class="card-body d-flex align-items-center justify-content-center text-center rounded-0"
          style="height: 400px; background-color: skyblue"
        >
          <p class="card-text fs-5 mb-0"><b><%= post.text %></b></p>
        </div>

        <!-- Footer (Delete Button for Admin) -->
        <% if (user === "lucifer") { %>
        <div class="card-footer bg-transparent d-flex justify-content-center">
          <form
            method="POST"
            action="/admin/reject/<%= post._id %>?_method=DELETE"
            class="m-0"
          >
            <button type="submit" class="btn btn-sm btn-outline-danger">
              ðŸ—‘ Delete Confession
            </button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
    <% } %> <% }) %>
  </div>
</div>
